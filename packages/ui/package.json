{
  "name": "@mstack/ui",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "bun run build:styles && bun run build:lib",
    "build:lib": "svelte-kit sync && svelte-package --input src",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "dev": "conc \"bun run dev:styles\" \"bun run dev:lib\" --names styles,lib",
    "dev:lib": "svelte-package --watch --input src",
    "dev:styles": "bun run build:styles && tailwindcss -i ./src/styles.css -o ./src/index.css --watch",
    "lint": "prettier --check . && eslint . --max-warnings=0",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "svelte-kit sync"
  },
  "main": "index.ts",
  "module": "index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles": "./src/index.css",
    "./tailwind": "./tailwind.config.ts"
  },
  "files": [
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "dist"
  ],
  "dependencies": {
    "@mstack/actions": "workspace:*",
    "lucide-svelte": "0.417.0",
    "svelte": "5.0.0-next.192",
    "tailwind-merge": "2.4.0"
  },
  "devDependencies": {
    "@mstack/tailwind-config": "workspace:*",
    "@mstack/typescript-config": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "4.0.0-next.4"
  }
}
