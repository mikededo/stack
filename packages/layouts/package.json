{
  "name": "@stack/layouts",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "svelte": "./src/index.ts"
    },
    "./styles": "./dist/index.css",
    "./tailwind": "./tailwind.config.ts"
  },
  "files": [
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "dist"
  ],
  "scripts": {
    "build": "bun run prepare && bun run build:lib && bun run build:styles",
    "build:lib": "svelte-kit sync && svelte-package --input src",
    "build:styles": "bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "dev": "bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css --watch",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix .",
    "prepare": "svelte-kit sync",
    "type-check": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "@stack/actions": "workspace:*",
    "@stack/supabase": "workspace:*",
    "lucide-svelte": "0.474.0",
    "tailwind-merge": "3.0.1"
  },
  "devDependencies": {
    "@stack/tailwind-config": "workspace:*",
    "@sveltejs/kit": "2.16.1",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "svelte": "5.19.6"
  }
}
