{
  "name": "monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:types": "supabase gen types --lang typescript --local --schema auth,public,finances > ./packages/svelte-supabase/src/database.ts",
    "dep:check": "syncpack list-mismatches",
    "dep:fix": "syncpack fix-mismatches",
    "dep:format": "syncpack format",
    "dep:lint": "syncpack lint",
    "dep:update": "syncpack update",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
    "lucide-svelte": "0.427.0",
    "svelte": "^5.0.0-next.216"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.9.0",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.2.0",
    "autoprefixer": "10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-perfectionist": "3.1.3",
    "eslint-plugin-svelte": "2.43.0",
    "globals": "15.9.0",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "postcss": "8.4.41",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.2.6",
    "prettier-plugin-tailwindcss": "0.6.6",
    "supabase": "1.187.10",
    "svelte-eslint-parser": "0.41.0",
    "syncpack": "12.4.0",
    "tailwindcss": "3.4.9",
    "turbo": "^2.0.12",
    "typescript": "5.5.4",
    "typescript-eslint": "8.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,svelte,html}": [
      "prettier --check",
      "eslint --max-warnings 0"
    ],
    "*.css": "prettier --check",
    "*package.json": [
      "bun run dep:check",
      "bun run dep:lint"
    ]
  },
  "packageManager": "bun@1.1.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
