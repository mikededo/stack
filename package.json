{
  "name": "monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "db:migration": "supabase migration new",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:types": "supabase gen types --lang typescript --local --schema auth,public,finances > ./packages/supabase/src/database.ts && turbo lint:fix --ui stream --output-logs errors-only --filter @stack/supabase",
    "dep:check": "syncpack list-mismatches",
    "dep:fix": "syncpack fix-mismatches",
    "dep:format": "syncpack format",
    "dep:lint": "syncpack lint",
    "dep:update": "syncpack update",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky || true",
    "turbo:update": "bunx @turbo/codemod@latest update",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "4.0.0-next.6",
    "lucide-svelte": "0.447.0",
    "svelte": "5.0.0-next.216"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.7.3",
    "@turbo/gen": "2.1.3",
    "autoprefixer": "10.4.20",
    "concurrently": "9.0.1",
    "eslint": "9.12.0",
    "eslint-plugin-format": "0.1.2",
    "eslint-plugin-perfectionist": "3.8.0",
    "eslint-plugin-svelte": "2.44.1",
    "globals": "15.10.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "postcss": "8.4.47",
    "supabase": "1.200.3",
    "svelte-eslint-parser": "0.41.1",
    "syncpack": "13.0.0",
    "tailwindcss": "3.4.13",
    "turbo": "^2.1.2",
    "typescript": "5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,svelte}": "eslint --max-warnings 0",
    "*.css": "echo 'Find css linter' && true",
    "*package.json": [
      "bun run dep:check",
      "bun run dep:lint"
    ]
  },
  "packageManager": "bun@1.1.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
