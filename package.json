{
  "name": "monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "db:migration": "supabase migration new",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:types": "supabase gen types --lang typescript --local --schema auth,public,finances > ./packages/svelte-supabase/src/database.ts && turbo lint:fix --ui stream --output-logs errors-only --filter @stack/svelte-supabase",
    "dep:check": "syncpack list-mismatches",
    "dep:fix": "syncpack fix-mismatches",
    "dep:format": "syncpack format",
    "dep:lint": "syncpack lint",
    "dep:update": "syncpack update",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "prepare": "husky",
    "turbo:update": "bunx @turbo/codemod@latest update",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "4.0.0-next.6",
    "lucide-svelte": "0.438.0",
    "svelte": "5.0.0-next.216"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.9.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.5.2",
    "autoprefixer": "10.4.20",
    "concurrently": "8.2.2",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-perfectionist": "3.3.0",
    "eslint-plugin-svelte": "2.43.0",
    "globals": "15.9.0",
    "husky": "9.1.5",
    "lint-staged": "15.2.10",
    "postcss": "8.4.44",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.2.6",
    "prettier-plugin-tailwindcss": "0.6.6",
    "supabase": "1.191.3",
    "svelte-eslint-parser": "0.41.0",
    "syncpack": "13.0.0",
    "tailwindcss": "3.4.10",
    "turbo": "^2.1.0",
    "typescript": "5.5.4",
    "typescript-eslint": "8.4.0"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "prettier --check",
      "eslint --max-warnings 0"
    ],
    "*.css": "prettier --check",
    "*package.json": [
      "bun run dep:check",
      "bun run dep:lint"
    ]
  },
  "packageManager": "bun@1.1.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
