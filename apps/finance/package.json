{
  "name": "@stack/finance",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "conc \"bun dev:app\" \"bun check:watch\" --names dev,check --handle-input --default-input-target dev",
    "dev:app": "vite dev",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint --fix .",
    "prepare": "svelte-kit sync",
    "preview": "vite preview",
    "test": "bun run test:integration && bun run test:unit",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@stack/actions": "workspace:*",
    "@stack/layouts": "workspace:*",
    "@stack/supabase": "workspace:*",
    "@stack/ui": "workspace:*",
    "@stack/utils": "workspace:*",
    "@supabase/ssr": "0.5.2",
    "@supabase/supabase-js": "2.47.10",
    "@tanstack/svelte-query": "5.62.8",
    "chart.js": "4.4.7",
    "lucide-svelte": "0.469.0",
    "tailwind-merge": "2.5.5"
  },
  "devDependencies": {
    "@playwright/test": "1.49.1",
    "@stack/tailwind-config": "workspace:*",
    "@stack/typescript-config": "workspace:*",
    "@sveltejs/adapter-auto": "3.3.1",
    "@sveltejs/adapter-node": "5.2.11",
    "@sveltejs/kit": "2.14.0",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "@tanstack/svelte-query-devtools": "5.62.8",
    "svelte": "5.15.0",
    "svelte-adapter-bun": "0.5.2",
    "svelte-check": "4.1.1",
    "tslib": "2.8.1",
    "vite": "6.0.5",
    "vitest": "2.1.8"
  }
}
