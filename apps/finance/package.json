{
  "name": "@mstack/finance",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "conc \"bun dev:app\" \"bun check:watch\" --names dev,check --handle-input --default-input-target dev",
    "dev:app": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . --max-warnings=0",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "svelte-kit sync",
    "preview": "vite preview",
    "test": "bun run test:integration && bun run test:unit",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "@mstack/tailwind-config": "*",
    "@mstack/typescript-config": "*",
    "@playwright/test": "1.28.1",
    "@sveltejs/adapter-auto": "3.0.0",
    "@sveltejs/kit": "2.5.18",
    "@sveltejs/vite-plugin-svelte": "3.1.1",
    "autoprefixer": "10.4.19",
    "concurrently": "8.2.2",
    "postcss": "8.4.39",
    "svelte": "5.0.0-next.192",
    "svelte-check": "3.8.4",
    "tailwindcss": "3.4.6",
    "tslib": "2.4.1",
    "vite": "5.3.4",
    "vitest": "2.0.3"
  }
}
