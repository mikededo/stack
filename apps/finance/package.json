{
  "name": "@mstack/finance",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "conc \"bun dev:app\" \"bun check:watch\" --names dev,check --handle-input --default-input-target dev",
    "dev:app": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . --max-warnings=0",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "svelte-kit sync",
    "preview": "vite preview",
    "test": "bun run test:integration && bun run test:unit",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@mstack/actions": "workspace:*",
    "@mstack/svelte-supabase": "workspace:*",
    "@mstack/ui": "workspace:*",
    "@mstack/utils": "workspace:*",
    "@supabase/ssr": "0.4.0",
    "@supabase/supabase-js": "2.44.4",
    "@tanstack/svelte-query": "5.51.11",
    "lucide-svelte": "0.417.0"
  },
  "devDependencies": {
    "@mstack/tailwind-config": "workspace:*",
    "@mstack/typescript-config": "workspace:*",
    "@playwright/test": "1.28.1",
    "@sveltejs/adapter-auto": "3.0.0",
    "@sveltejs/kit": "2.5.18",
    "@sveltejs/vite-plugin-svelte": "4.0.0-next.4",
    "@tanstack/svelte-query-devtools": "5.51.11",
    "svelte": "5.0.0-next.192",
    "svelte-check": "3.8.4",
    "tslib": "2.4.1",
    "vite": "5.3.4",
    "vitest": "2.0.3"
  }
}
